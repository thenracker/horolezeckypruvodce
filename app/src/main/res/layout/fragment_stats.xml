            />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView" />



</LinearLayout>

    <android.support.design.widget.FloatingActionButton android:id="@+id/fabswitchlist"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom" android:layout_margin="@dimen/fab_margin"
        android:visibility="visible"
        android:src="@drawable/ic_forward_white"  />

</FrameLayout>